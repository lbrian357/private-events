<h1><%=@user.name%></h1>

<% if @user.invited_events.any? %>
  <h3>Invites</h3>
  <ul>
    <% @user.invited_events.each do |event| %>
      <li><%= link_to "#{event.name}", event %></li>
    <% end %>
  </ul>
<% end %>

<% if @user.created_events.any? %>
  <h3>Events created by <%= @user.name %> (<%= @user.created_events.count %>)</h3>
  <ol>
    <% @user.created_events.each do |event| %>
      <li>
        <%=link_to "#{event.name}", event %>
      </li>

    <% end %>
  </ol>
<% else %>
  <h3><%= @user.name %> hasn't created an Event yet!</h3>
<% end %>

<% if @upcoming_events.any? %>
  <h3><%= @user.name %> is going to attend:</h3>
  <ul> 
    <% @upcoming_events.each do |event| %>
      <li><%= link_to "#{event.name}", event %></li>
    <% end %>
  </ul>
<% else %>
  <h3><%= @user.name %> isn't going to any Events</h3>
<% end %>

<% if @previous_events.any? %>
  <h3><%= @user.name %> has attended:</h3>
  <ul>
    <% @previous_events.each do |event| %>
      <li><%= link_to "#{event.name}", event %></li>
    <% end %>
  </ul>
<% else %>
  <h3><%= @user.name %> hasn't previously attended any Events yet.</h3>
<% end %>



